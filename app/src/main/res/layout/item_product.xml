<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="#33000000" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apple Juice Apple Juice Apple Juice Apple Juice Apple Juice Apple Juice Apple Juice Apple Juice"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="23sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow android:padding="4dp">

            <TextView
                android:textSize="16sp"
                android:id="@+id/tvCalories"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="Calories: 1,23" />

            <TextView
                android:textSize="16sp"
                android:id="@+id/tvFat"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="Fat: 1,23" />
        </TableRow>

        <TableRow android:padding="4dp">

            <TextView
                android:textSize="16sp"
                android:id="@+id/tvProtein"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="Protein: 1,23" />

            <TextView
                android:textSize="16sp"
                android:id="@+id/tvCarbs"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="Carbs: 1,23" />
        </TableRow>
    </TableLayout>

</LinearLayout>