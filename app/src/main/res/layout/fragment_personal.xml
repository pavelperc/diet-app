<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mainScreen.explore.ExploreFragment">

    <com.example.dietapp.ui.views.ScalableImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_personal"
        android:layout_marginBottom="@dimen/bottom_navigation_height_reversed"
        app:scaleType="fitBottom" />

    <FrameLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center|top"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="What would\nyou like to add?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="48sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:theme="@style/Switch"
            android:id="@+id/swchUseTestData"
            tools:checked="true"
            android:textSize="24sp"
            android:layout_margin="16dp"
            app:switchPadding="16dp"
            android:text="Use test data"
            android:textColor="@color/white"
            android:layout_gravity="bottom|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</FrameLayout>